.header-small
	background-color white
	position fixed
	top 0
	z-index 10
	width 100%
	.decorations
		left 30%
		position absolute
		display flex
		>div
			height 10px
			width 25px
		.blue
			background $blue
		.black
			background black
		.magenta
			background $magenta
	.container
		display flex
		div.logo
			flex-grow 1
			display flex
			a
				display flex			
				.brand-small
					margin-right 2em
					width 70%
					max-width 100px
	.products-menu-wrap
		p
			display none
		.product-container
			.product-item
				width 3.5em
				margin-right 0.4em
			a
				span
					font-size 0.7em
					display none