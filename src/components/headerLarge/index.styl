.haderLarge
	position relative
	width 100%
	top 0
	background white
	z-index 99
	.decorations
		right 0
		position absolute
		display flex
		>div
			height 15px
			width 25px
		.blue
			background $blue
		.black
			background black
		.magenta
			background $magenta
	.container
		.top
			display flex
			align-items center
			.logo-brand
				padding-top 0.5em
				padding-bottom 0.5em
				display flex
				flex-basis 100%
				justify-content center
				img
					width 6em 
			.menu
				display flex
				align-items center
				justify-content flex-end
				ul
					display flex
					li
						margin-left 1em
						a
							color $lightGray
					li.selected
						border-bottom solid 3px $blue
		.bottom
			display flex
			align-items center
			.products
				background lime
				width 60%
		.statis
			position fixed
@media (min-width $sm)
	.haderLarge
		.decorations
			left 30%
		.container
			.top
				.logo-brand
					justify-content flex-start
					img
						width auto !important