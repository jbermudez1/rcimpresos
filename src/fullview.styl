.fullView
	top	0
	position fixed
	width 100%
	height 100%
	overflow hidden
	z-index 99
	background rgba(0,0,0,0.7)
	display none
	justify-content center
	align-items center
	&-container
		left 0
		right 0
		margin-top 2em
		margin-left auto
		margin-right auto
		border solid 5px white
		height 90%
		width 90%
		display flex
		.imagen
			height 100%
			width 100%
			background-size cover
			background-position bottom
			background-repeat no-repeat
			position relative
			.closeModal
				position absolute
				font-size 4em
				right 0.2em
				top 0em
				color white
				cursor pointer
				&:hover
					color $primary-color
@media (min-width $screen-md)
	.fullView
		&-container
			height 70%
			width 80%
@media (min-width $screen-lg)
	.fullView
		&-container
			height 80%
			width 70%

